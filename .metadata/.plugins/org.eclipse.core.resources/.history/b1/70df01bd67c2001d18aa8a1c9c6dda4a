package br.com.poo.estruturaif; 
import java.util.Scanner;  


public class Estruturaif2{

	
 public static void main (String args[] ){ 
 System.out.println("=================== Valor par ou Valo Impar=================="); 
 System.out.println("\nEntre com um valor numérico:"); 
 //declaração da variável numérica 

 int numero; 

//Permite a entrada de dados pelo teclado via terminal 

Scanner entrada = new Scanner(System.in); 
 numero=entrada.nextInt(); 

 

//Vamos testar se o numero digitado é par ou impar 

 

if(numero % 2 == 0)
	{ 	

 

System.out.println("O numero: "+numero+" é Par");

	} 

 

else { 

System.out.println("O numero: " +numero+ "é impar"); 
 
	} 

  	 
}
